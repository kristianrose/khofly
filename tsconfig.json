{
  "include": ["env.d.ts", "**/*.ts", "**/*.tsx", "app/cron/status.js"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/common/components/*"],
      "@content/*": ["src/content/*"],
      "@layout/*": ["src/common/layouts/*"],
      "@module/*": ["src/modules/*"],
      "@styles/*": ["src/styles/*"],
      "@hooks/*": ["src/hooks/*"],
      "@utils/*": ["src/utils/*"],
      "@icons/*": ["src/icons/*"],
      "@store/*": ["src/store/*"],
      "@ts/*": ["src/types/*"]
    },

    // Vite takes care of building everything, not tsc.
    "noEmit": true
  }
}
